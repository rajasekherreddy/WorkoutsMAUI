                ButtonStyle="Black" HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                HeightRequest="45"
                WidthRequest="275"
                Margin="0,20,0,20">
                <controls:AppleSignInButton.IsVisible>
