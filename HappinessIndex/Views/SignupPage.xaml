                Grid.Row="4" Source="FacebookLogin.png" Grid.ColumnSpan="2" HorizontalOptions="Center" IsVisible="True"/>

            <ImageButton HeightRequest="45" Margin="0,20,0,0" Command="{Binding LoginWithGoogleCommand}"
                Grid.Row="3" Source="Google.png" Grid.ColumnSpan="2" HorizontalOptions="Center" IsVisible="True"/>

            <controls:AppleSignInButton
